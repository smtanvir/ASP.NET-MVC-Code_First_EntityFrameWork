@model ASP.NET_MVC_EntityFramework.Models.Publisher
@{
    ViewBag.Title = "Edit";
}

<div class="row mt-2">
    <div class="offset-3 col-md-8">
        @using (Html.BeginForm("Edit", "Publishers"))
        {
            @Html.AntiForgeryToken();
            <div class="form-text border">
                <h3 class="mb-3 text-center alert alert-primary">Update Publisher Information</h3>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(p => p.Id)
                <div class="form-group row ml-2">
                    @Html.LabelFor(p => p.Id, new { @class = "form-control-label col-md-3" })
                    <div class="col-md-8">
                        @Html.DisplayFor(p => p.Id, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row ml-2">
                    @Html.LabelFor(p => p.PublisherName, new { @class = "form-control-label col-md-3" })
                    <div class="col-md-8">
                        @Html.EditorFor(p => p.PublisherName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(p => p.PublisherName, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>
            <div class="form-group mt-3">
                @Html.ActionLink(" Back To List", "Index", new { }, new { @class = "fa fa-arrow-left" })
                <input type="submit" value="Update" class="btn btn-success float-right" />
            </div>
        }
    </div>
</div>

@section scripts{
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}
