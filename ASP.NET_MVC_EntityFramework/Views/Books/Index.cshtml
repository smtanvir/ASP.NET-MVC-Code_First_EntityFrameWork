@model IEnumerable<ASP.NET_MVC_EntityFramework.Models.Book>
@{
    ViewBag.Title = "Index";
}

<div class="row mt-3">
    <div class="col">
        <h2 class="text-center">Book List</h2>
        <div class="d-flex justify-content-end mb-1 mt-1">
            @Html.ActionLink(" Add New", "Create", new { }, htmlAttributes: new {@class="btn btn-success fa fa-plus"})
        </div>
        <table class="table table-bordered table-hover table-striped">
            <thead class="thead-dark">
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(b=>b.CoverImage)</th>
                    <th>@Html.DisplayNameFor(b=>b.BookName)</th>
                    <th>@Html.DisplayNameFor(b=>b.AuthorName)</th>
                    <th>@Html.DisplayNameFor(b=>b.Publisher.PublisherName)</th>
                    <th>@Html.DisplayNameFor(b=>b.PublishDate)</th>
                    <th>@Html.DisplayNameFor(b=>b.Price)</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model)
                {
                    <tr>
                        <td><img src="@Url.Content(book.CoverImage)" width="40" height="50" /> </td>
                        <td>@book.BookName</td>
                        <td>@book.AuthorName</td>
                        <td>@book.Publisher.PublisherName</td>
                        <td>@book.PublishDate.ToString("dd-MM-yyyy")</td>
                        <td>@book.Price.ToString("0.00")</td>
                        <td class="d-flex justify-content-center">
                            @Html.ActionLink(" ","Edit",new { id = book.Id }, new {@class="btn btn-primary fa fa-edit btn-sm"})
                            &nbsp;
                            @Html.ActionLink(" ", "Delete", new { id = book.Id }, htmlAttributes: new {@class="btn btn-danger fa fa-trash btn-sm", onclick = "return confirm('Are sure wants to delete?')"})
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>